{
  "extends": "ts-node/node16/tsconfig.json",
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "preferTsExts": true,
    "compilerOptions": {
      "sourceMap": true
    }
  },
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "build",
    "sourceMap": false,
    "moduleResolution": "node16"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
